= render partial: 'layouts/navbar'

.container-fluid
  .row
    .col-md-10
      .comic-wrapper
        .comic
          .text-center
            %h1 New thread
          .inner_div
            = simple_form_for [@comic, @forum, @group] do |f|
              %h4 Thread title:
              .form-group
                = f.input :title, label: false
              %h4 Description:
              .form-group
                = f.text_area :description, label: false, class: 'form-control'
              %center
                = f.submit 'Create Forum!', class: 'btn btn-primary'
    .col-md-2
      .sidebar-nav-fixed.pull-right.affix
        - unless current_user.premium_until.present? && current_user.premium_until > Time.zone.now
          = image_tag(image_path('banner.gif'), class: 'd-inline-block advertising')
