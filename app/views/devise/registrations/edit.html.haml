.container
  .gray.center.editprofile
    %h2.text-center Modificar cuenta
    - if @user.avatar?
      .text-center.avatar= image_tag @user.avatar.url(:thumb)

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .form-group
        = f.input :email, label: 'E-mail', readonly: true
      .form-group
        = f.input :current_password, label: 'Contraseña'
        %i (Se necesita la contraseña actual para confirmar los cambios)
      .form-group
        = f.input :first_name, label: 'Nombre'
      .form-group
        = f.input :last_name, label: 'Apellidos'
      .form-group
        %label Foto de perfil
        = f.file_field :avatar
      .form-group
        = f.input :password, label: 'Nueva contraseña'
      .form-group
        = f.input :password_confirmation, label: 'Confirmar nueva contraseña'
      .actions.text-center
        = f.submit 'Actualizar perfil', class: 'btn btn-success'
    %br
      %br
      .row
        .col
          = link_to 'Volver', :root, class: 'btn btn-primary'
        .col
          = link_to 'Borrar mi cuenta', registration_path(resource_name), data: { confirm: '¿Estás seguro?' }, method: :delete, class: 'btn btn-danger'
%br